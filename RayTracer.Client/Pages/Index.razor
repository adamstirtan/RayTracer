@page "/"

@using Newtonsoft.Json

@using RayTracer.Client.Models
@using RayTracer.Core
@using RayTracer.Core.Scenes

<div class="container-fluid p-0">
    <div class="row no-gutters">
        <div class="col-lg-6">
            <div class="d-flex align-items-center justify-content-center editor">
                <div class="col-md-10">
                    <div class="card">
                        <div class="card-header">
                            Ray Tracer
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">Scene Description</h5>
                            <EditForm Model="@Scene" OnValidSubmit="@HandleValidSubmit">
                                <DataAnnotationsValidator />
                                <div class="form-row">
                                    <div class="form-group col-md-7">
                                        <label>@nameof(Scene.Name)</label>
                                        <div>
                                            <InputText @bind-Value="@Scene.Name" class="form-control" />
                                            <ValidationMessage For="@(() => Scene.Name)" />
                                        </div>
                                    </div>
                                    <div class="form-group col-md-5">
                                        <label>@nameof(Scene.Slug)</label>
                                        <div>
                                            <InputText @bind-Value="@Scene.Slug" class="form-control" readonly />
                                            <ValidationMessage For="@(() => Scene.Slug)" />
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-12">
                                        <label>@nameof(Scene.Json)</label>
                                        <div>
                                            <InputTextArea @bind-Value="@Scene.Json" class="form-control" rows="15" />
                                            <ValidationMessage For="@(() => Scene.Json)" />
                                        </div>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-large btn-primary">
                                    Render
                                </button>
                            </EditForm>
                        </div>
                        <div class="card-footer text-muted">
                            <a href="https://github.com/adamstirtan/raytracer">
                                <span class="oi oi-code"></span> https://github.com/adamstirtan/raytracer
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="d-flex align-items-center render">
                <img class="rounded mx-auto d-block" src="@ImageData" />
            </div>
        </div>
    </div>
</div>

@code
{
    private Engine _engine = new Engine();

    protected string ImageData = "https://placehold.it/800x600";

    protected SceneDescription Scene = new SceneDescription
    {
        Name = "Spheres",
        Slug = "sphere",
        Json = JsonConvert.SerializeObject(new SphereScene())
    };

    private void HandleValidSubmit()
    {
        _engine.LoadScene(new SphereScene());

        var render = _engine.Render(800, 600);

        if (render != null)
        {
            ImageData = render;
        }
    }
}